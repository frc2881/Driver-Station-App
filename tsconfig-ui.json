{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/ui/**/*", "src/common/**/*"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false
  }
}
